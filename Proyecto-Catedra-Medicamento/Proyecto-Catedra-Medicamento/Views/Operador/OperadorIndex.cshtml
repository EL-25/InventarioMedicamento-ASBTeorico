@{
    ViewData["Title"] = "Panel del Operador";
    var nombreUsuario = User.Identity.Name;
}

<header class="mb-5 text-center">
    <h1 class="text-info">Bienvenido, @nombreUsuario</h1>
    <p class="lead">
        Estas son las funciones disponibles para tu rol <strong>Operador</strong>. Las demás están restringidas para usuarios con rol <strong>Administrador</strong>.
    </p>
</header>

<div class="row justify-content-center g-4">

    <!-- Inventarios de Medicamentos -->
    <div class="col-md-5">
        <div class="card bg-gradient bg-dark text-white shadow-lg border-info">
            <div class="card-body text-center">
                <i class="fas fa-pills fa-3x text-info mb-3 animate__animated animate__pulse"></i>
                <h4 class="card-title">Inventario Disponible</h4>
                <p class="card-text">Consulta el inventario actual de medicamentos disponibles.</p>
                <a asp-controller="Ventas" asp-action="RevisarInventario" class="btn btn-outline-info mt-2">
                    <i class="fas fa-search"></i> Ir a Inventario
                </a>
            </div>
        </div>
    </div>

    <!-- Realizar Venta-->
    <div class="col-md-5">
        <div class="card bg-gradient bg-dark text-white shadow-lg border-success">
            <div class="card-body text-center">
                <i class="fas fa-truck fa-3x text-success mb-3 animate__animated animate__pulse"></i>
                <h4 class="card-title">Realizar Venta</h4>
                <p class="card-text">Consulta los proveedores registrados en el sistema institucional.</p>
                <a asp-controller="Ventas" asp-action="RegistrarVenta" class="btn btn-outline-success mt-2">
                    <i class="fas fa-address-book"></i> Ir a Realizar Venta
                </a>
            </div>
        </div>
    </div>

    <!-- Entradas -->
    <div class="col-md-5">
        <div class="card bg-gradient bg-dark text-white shadow-lg border-warning">
            <div class="card-body text-center">
                <i class="fas fa-arrow-down fa-3x text-warning mb-3 animate__animated animate__pulse"></i>
                <h4 class="card-title">Entradas</h4>
                <p class="card-text">Consulta los ingresos de medicamentos realizados.</p>
                <a asp-controller="Medicamentos" asp-action="ListadoEntradas" class="btn btn-outline-warning mt-2">
                    <i class="fas fa-box-open"></i> Ir a entradas
                </a>
            </div>
        </div>
    </div>

    <!-- Salidas -->
    <div class="col-md-5">
        <div class="card bg-gradient bg-dark text-white shadow-lg border-danger">
            <div class="card-body text-center">
                <i class="fas fa-cash-register fa-3x text-danger mb-3 animate__animated animate__pulse"></i>
                <h4 class="card-title">Salidas</h4>
                <p class="card-text">Consulta las salidas de medicamentos realizados.</p>
                <a asp-controller="Ventas" asp-action="ListadoVentas" class="btn btn-outline-danger mt-2">
                    <i class="fas fa-receipt"></i> Ir a salidas
                </a>
            </div>
        </div>
    </div>

</div>
