@model Proyecto_Catedra_Medicamento.Models.Salida
@{
    ViewData["Title"] = "Registro de Salida";
}

<style>
    .titulo-seccion {
        background: linear-gradient(to right, #003366, #005599);
        color: #00ffff;
        padding: 15px;
        text-align: center;
        font-size: 1.8rem;
        font-weight: bold;
        border-radius: 8px 8px 0 0;
    }

    .form-label {
        font-weight: bold;
        color: #003366;
    }

    .form-control {
        background-color: #f0f8ff;
        color: #003366;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

        .form-control::placeholder {
            color: #6699cc;
        }

    .botones-formulario {
        margin-top: 20px;
        text-align: right;
    }
</style>

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="titulo-seccion">
            <i class="fas fa-dolly"></i> Registro de Salida de Medicamento
        </div>

        <div class="card-body">
            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @ViewBag.Mensaje
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <strong>Errores en el formulario:</strong>
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="Index" method="post">
                <div class="form-group">
                    <label asp-for="id_lote" class="form-label"><i class="fas fa-box-open"></i> Lote</label>
                    <select asp-for="id_lote" class="form-control" required asp-items="@(new SelectList(ViewBag.Lotes, "id_lote", "descripcion", Model.id_lote))">
                        <option value="">-- Seleccione un lote --</option>
                    </select>
                    <span asp-validation-for="id_lote" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="id_usuario" class="form-label"><i class="fas fa-user-tag"></i> Usuario que registra</label>
                    <select asp-for="id_usuario" class="form-control" required asp-items="@(new SelectList(ViewBag.Usuarios, "id_usuario", "nombre", Model.id_usuario))">
                        <option value="">-- Seleccione un usuario --</option>
                    </select>
                    <span asp-validation-for="id_usuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="cantidad" class="form-label"><i class="fas fa-sort-numeric-down"></i> Cantidad vendida</label>
                    <input asp-for="cantidad" class="form-control" />
                    <span asp-validation-for="cantidad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="observaciones" class="form-label"><i class="fas fa-comment-dots"></i> Observaciones</label>
                    <textarea asp-for="observaciones" class="form-control" rows="3" placeholder="Observaciones opcionales..."></textarea>
                    <span asp-validation-for="observaciones" class="text-danger"></span>
                </div>

                <div class="botones-formulario">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-paper-plane"></i> Registrar salida
                    </button>
                    <a asp-action="Listado" class="btn btn-outline-secondary ml-2">
                        <i class="fas fa-list"></i> Ver historial
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
