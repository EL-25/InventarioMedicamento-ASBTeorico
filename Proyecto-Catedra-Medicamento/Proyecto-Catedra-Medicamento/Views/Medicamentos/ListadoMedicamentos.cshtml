@model List<Proyecto_Catedra_Medicamento.Models.ViewModels.MedicamentoViewModel>
@{
    ViewData["Title"] = "Medicamentos Registrados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(to right, #004e92, #000428);
        padding: 40px;
        color: #fff;
    }

    table {
        width: 90%;
        margin: auto;
        border-collapse: collapse;
        background-color: rgba(0,0,0,0.6);
        box-shadow: 0 0 10px rgba(0,0,0,0.5);
    }

    th, td {
        padding: 10px;
        border-bottom: 1px solid #00ffff;
        text-align: left;
    }

    th {
        background-color: #00ffff;
        color: #000;
    }

    h2 {
        text-align: center;
        color: #00ffff;
        margin-bottom: 30px;
        text-shadow: 1px 1px 10px #000;
    }
</style>

<h2>Medicamentos Registrados</h2>

<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Presentación</th>
            <th>Marca</th>
            <th>Proveedor</th>
            <th>Fecha Vencimiento</th>
            <th>Cantidad Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.nombre</td>
                <td>@m.presentacion</td>
                <td>@m.marca</td>
                <td>@m.proveedor</td>
                <td>@m.fecha_vencimiento.ToShortDateString()</td>
                <td>@m.cantidad_total</td>
            </tr>
        }
    </tbody>
</table>
